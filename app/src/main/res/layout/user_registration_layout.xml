<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USER NAME"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/nameEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4e5d6f"
            android:ems="10"
            android:hint="Required (Min 6)"
            android:inputType="textPersonName"
            android:textColor="#858f9b" />

        <!-- Password Feild -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PassWord"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/passeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4e5d6f"
            android:ems="10"
            android:hint="Required (Min 6)"
            android:inputType="textPassword"
            android:textColor="@android:color/white" />


        <!-- Re Enter Password Feild -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re Enter PassWord"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/repasseditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4e5d6f"
            android:ems="10"
            android:hint="Required"
            android:inputType="textPassword"
            android:textColor="@android:color/white" />


        <!-- Phone Feild -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Phone Number"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/phoneeditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4e5d6f"
            android:ems="10"
            android:hint="@string/phoneRequired"
            android:inputType="phone"
            android:textColor="@android:color/white" />

        <!-- Email Feild -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Email Gose Here"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/emailEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4e5d6f"
            android:ems="10"
            android:hint="@string/emailRequired"
            android:inputType="textEmailAddress"
            android:textColor="#858f9b" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/signupbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
