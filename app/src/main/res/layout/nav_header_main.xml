<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/gradientbackgroundloginsingup"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_userphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_image_edit_icon"
            app:civ_border_color="#5da6ac"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_user_pic_change"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_image_add_icon" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_user_pic_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_image_delete_icon" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_user_pic_management"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_image_edit_icon" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/nav_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdsd"
        android:textColor="@android:color/holo_green_dark" />

</LinearLayout>
